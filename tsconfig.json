{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "obsidian", "react", "react-dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "scripts/*.mjs"],
  "exclude": ["node_modules", ".obsidian", "dist"]
}
